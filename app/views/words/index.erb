<h1>Words</h1>
<a href="/words/new">Add a new word to the database</a>
<table class="table table-striped">
  <thead>
    <th>Text</th>
    <th>Letters</th>
	<th>Anagrams</th>
	<th>Edit</th>
	<th>Delete</th>
  </thead>
  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td>
			<a href="<%= "/words/#{word[:id]}" %> ">
				<h2><%= "#{word[:text]}" %></h2>
			</a>
		</td>
        <td><%= "#{word[:letters]}" %></td>
		<td>
			<a href="<%= "../anagrams/#{word[:text]}" %> ">Anagrams</a>
		</td>
		<td>
			<a href="<%= "../words/#{word[:id]}/edit" %> ">Edit <%= "#{word[:text]}" %></a>
		</td>
		<td>
			<form action="<%= "/words/#{word[:id]}" %>" method="post" class="delete">
				<input type="hidden" name="_method" value="delete" />
				<input type="submit" value="Delete" class="delete" />
			</form>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>